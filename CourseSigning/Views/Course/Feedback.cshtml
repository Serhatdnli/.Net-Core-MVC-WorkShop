@model Candidate

<div>
    <h3 class="display-4">Congratulations @Model.FullName</h3>
    <p class="lead">Your application has been <mark>accepted.</mark></p>
    <p class="lead">Many thanks for your interest.</p>
    <hr>
    <blockquote class="blockquote">
        you have enrolled to @Model.SelectedCourse course
    </blockquote>
    <p class="text-muted">
        you applied at @Model.ApplyTime
    </p>
    <div class="btn-group">
        <a class="btn btn-outline-success" asp-action="Index">Applications</a>
        <a class="btn btn-success" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</div>